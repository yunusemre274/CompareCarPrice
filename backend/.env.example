# Server Configuration
PORT=5000
NODE_ENV=development

# API Keys (Get free keys from these services)
# Exchange Rate API - https://exchangerate.host (Free, no key needed)
# Or use https://openexchangerates.org
EXCHANGE_RATE_API_KEY=optional_key_here

# World Bank API (No key needed)
# https://api.worldbank.org/v2/

# REST Countries API (No key needed)
# https://restcountries.com/v3.1/

# Cache Settings
CACHE_TTL_MINUTES=10
CACHE_TTL_SECONDS=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:5173
